<div class="box">
  <article class="media">
    
  <figure class="media-left">
    <p class="image is-68x68 user-thumb">
      <%= gravatar_image_tag(comment.user.email.gsub('spam', 'mdeering'), alt: comment.user.name, gravatar: { size: 64 }) %>
    </p>
  </figure>
    
    <div class="media-content negative-margin-top">
      <div class="content">
        <p>
          <strong><%= comment.user.name %></strong>
          <div><%= comment.response %></div>
        </p>
      </div>
    </div>
     <% if (user_signed_in? && (current_user.id == comment.user_id)) %>
      <div class="media-right">
        <%= link_to [comment.shot, comment],
                    method: :delete, class: "transparent", data: { confirm: 'Are you sure?' } do %>
          <span class='icon is-medium'><i class='fa fa-trash-o fa-2x' aria-hidden='true'></i></span>
        <% end %>
      </div>
      <% end %>
  </article>
</div>